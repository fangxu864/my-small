.container {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 750rpx;
    background-color: #f0f4f5;
    font-size: 24rpx;
    height: 100%;
}


/*banner*/

.banner-box {
    width: 100%;
    height: 428rpx;
    position: relative;
    overflow: hidden
}

.banner-box .shop-name{
  position:absolute;
  top:0;
  left:0;
  right:0;
  text-align:center;
  line-height:88rpx;
  color:#ffffff;
  font-size:32rpx;
  font-weight:bold;
  background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0));
  z-index:200;
}

.banner-box .shop-name .icon-erweima1{
  float: right;
  right:0px;
  width:88rpx;
  height:88rpx;
  font-size: 38rpx;
}

.banner-box .swiper-box {
    width: 100%;
    height: 100%;
}

.banner-box .swiper-box image {
    width: 100%
}

.banner-box .info-box {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 16rpx 20rpx;
    font-size: 40rpx;
    line-height: 40rpx;
    background: rgba(0, 0, 0, .4);
    color: #fff;
}

.banner-box .info-box text.land-name {
    font-size: 24rpx;
    font-weight: bold;
}

.banner-box .info-box text.land-adress {
    font-size: 24rpx;
    margin-left: 20rpx;
}

.banner-box .info-box .icon-icon-system-fi-navigation {
    float: right;
    font-size: 18px
}


/*tab-title*/

.tab-title-box {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    background-color: #fff;
    border-bottom: 1rpx solid #e5e5e5;
    height: 92rpx;
    line-height: 92rpx;
    font-size: 28rpx;
    z-index: 10;
}

.tab-title-box.fixed {
    position: fixed;
    width: 100%;
    top: 0;
    box-shadow: 0 1px 1px rgba(50, 50, 50, .1)
}

.tab-title-box .tab-title {
    padding: 5px;
    width: 33.3%;
    text-align: center;
}

.tab-title-box .tab-title.active {
    border-bottom: 6rpx solid #457ed8;
    color: #457ed8;
    font-weight: bold;
    background: #eaeaea;
}


/*ticket-list-box*/

.ticket-list-box {
    background-color: #fff
}

.ticket-list-box .more-tickets {
    height: 64rpx;
    line-height: 58rpx;
    text-align: center;
    background: #fff;
    border-bottom: 1rpx solid #dbdbdb;
    font-size: 24rpx
}

.ticket-list-box .ticket-list-item {
    padding: 20rpx 4%;
    display: flex;
    flex-direction: row;
    border-bottom: 1rpx solid #e5e5e5;
    justify-content: space-between;
    align-items: center
}

.ticket-list-box .ticket-list-item .lt {
    width: 70%;
    display: flex;
    flex-direction: column;
    justify-content: center
}

.ticket-list-box .ticket-list-item .lt text.t-title {
    font-weight: bold;
    font-size: 28rpx;
}

.ticket-list-box .ticket-list-item .lt text.t-desc {
    margin: 10rpx 0;
    font-size: 24rpx;
    color: #92a0ab;
    text-align: justify;
}

.ticket-list-box .ticket-list-item .lt .t-desc-box {
    margin: 10rpx 0;
}

.ticket-list-box .ticket-list-item .lt text.t-tag {
    padding: 10rpx;
    font-size: 24rpx;
    background-color: #f5f5f5;
    color: #457ed8;
    margin-right: 8rpx;
    margin-top: 6rpx;
    display: inline-block
}

.ticket-list-box .ticket-list-item .rt {
    width: 26%;
    text-align: right;
    display: filex;
    flex-direction: column;
    justify-content: center
}

.ticket-list-box .ticket-list-item .rt .original-price {
    font-size: 24rpx;
    margin-bottom: 10rpx;
    text-decoration: line-through;
    color: #92a0ab;
}

.ticket-list-box .ticket-list-item .rt .discount-price {
    font-size: 32rpx;
    margin-bottom: 10rpx;
    color: #f95137;
}

.ticket-list-box .ticket-list-item .rt .book-btn {
    font-size: 30rpx;
    color: #fff;
    background-color: #f95137;
    line-height: 60rpx;
    padding: 4rpx 30rpx;
    text-align: center;
    border-radius: 3px;
}


/*taopiao_about*/

.taopiao-about {
    margin-top: 20rpx;
}

.taopiao-about .switch-btn {
    position: relative;
    height: 86rpx;
    line-height: 86rpx;
    border-bottom: 1rpx solid #dbdbdb;
    padding: 0 20rpx;
    background: #fff;
}


/*p-desc-box*/

.p-desc-box {
    margin-top: 20rpx;
    background-color: #fff;
}

.p-desc-box .desc-title {
    height: 86rpx;
    line-height: 86rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
    font-weight: bold;
    border-bottom: 1rpx solid #e5e5e5;
}

.p-desc-box .desc-con {
    padding: 20rpx;
    background: #fff;
    font-size: 24rpx;
    line-height: 60rpx;
    overflow: hidden;
}

.p-desc-box .desc-con image {
    width: 710rpx
}

.p-desc-box .desc-con .rich-img {
    width: 710rpx
}

.p-desc-box .desc-con text {
    text-align: justify
}

.bot-phone-call {
    background-color: #f6f6f6;
    border: 20rpx solid #ffffff;
    text-align: center;
    padding: 30rpx;
}

.bot-phone-call .call-btn {
    width: 70%;
    color: #457ed8;
    background-color: #ffffff;
}
.bot-phone-call .call-btn iconfont {
    margin-right: 20rpx;
}

.bot-phone-call .call-btn:active {
    background-color: #f6f6f6;
}

.bot-phone-call .tip-text {
    color: #959697;
    line-height: 50rpx;
    margin-bottom: 20rpx;
    display: inline-block;
}

.bot-phone-call .call-btn .text {
    /* font-weight: bold; */
}


/*footer*/

.footer {
    text-align: center;
    padding: 30rpx 0;
}