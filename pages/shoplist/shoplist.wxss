page{
    background-color: #e8e8e8;
    font-size: 24rpx;
}

.clearfix:after{
    content:".";
    display:block;
    height:0;
    clear:both;
    visibility:hidden
}
.top-title{
    padding:20rpx;
    text-align: center;
    background-color: #ffffff;
    font-size: 30rpx;
    position: relative;
    height: 60rpx;
    line-height: 60rpx;
    margin-top: 20rpx;
}

.top-title .choose-location{
    padding:20rpx;
    position: absolute;
    top: 0;
    right: 0;
    font-size:28rpx;
    color: #616161;
}
.top-title .choose-location:active{
  background-color: #e5e5e5;
}
.top-title .location-icon{
    width: 38rpx;
    height: 38rpx;
    position: relative;
    top: 9rpx;
}


.top-tips{
    padding: 20rpx 0 10rpx 20rpx;
}
.shop-item{
    background-color: #ffffff;
    margin-bottom: 20rpx;
    position: relative;
}
.shop-item:active{
    background-color: #e5e5e5;
}

.shop-item .shop-img{
    box-sizing: border-box;
    width: 20%;
    padding: 20rpx;
    height:160rpx;
    float: left;
}

.shop-item .rt{
    float: left;
    width: 70%;
}
.shop-item .rt .shop-name{
    font-size: 28rpx;
    font-weight: bold;
    padding:20rpx 0 0 20rpx;
}
.shop-item .rt .summary{
    padding: 10rpx 20rpx ;
    color:#666666;
}
.shop-item .rt .distance{
    position: absolute;
    color:#666666;
    font-size: 24rpx;
    right: 20rpx;
    bottom:10rpx;
}
.shop-item .rt .bottom{
    padding: 10rpx 20rpx ;
    position: absolute;
    bottom:6rpx;
}

.page-status{
    background-color:#fff;
    line-height:168rpx;
    text-align:center;
    font-size:28rpx;
    color:#c3c3c3;
    margin-top:40rpx;
}















