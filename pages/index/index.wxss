/*banner*/
.banner-box{
  width: 100%;
  height: 428rpx ;
  position:relative;
  overflow: hidden
}
.banner-box .img-box{
  width: 100%
}
.banner-box .img-box image{
  width: 100%
}
.banner-box .info-box{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 16rpx 20rpx;
    font-size: 40rpx;
    line-height: 40rpx;
    background: rgba(0,0,0,.4);
    color: #fff;
}
.banner-box .info-box .banner-text{
  font-size: 28rpx;
}
.banner-box .shop-name{
  position:absolute;
  top:0;
  left:0;
  right:0;
  text-align:center;
  line-height:88rpx;
  color:#ffffff;
  font-size:32rpx;
  font-weight:bold;
  background: rgba(0, 0, 0, 0.1);
}

.banner-box .shop-name .arrow-bottom{
  width: 40rpx;
  height: 40rpx;
  position:relative;
  top:10rpx;

}
.scroll-view-wrap {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}
.scroll-view {
  position: relative;
  height: 100%;
}
.plist {
  padding: 10px 10px 0;
}
.plist:after {
  content:'';
  display: table;
  height: 0;
  clear: both;
}
  .gtextoverflow {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .itemBox {
    float: left;
    width: 48.5%;
    margin-bottom: 10px;
    overflow: hidden;
    background: #fff;
  }

  .itemBox:nth-child(2n+1) {
    margin-right: 3%;
  }

  .itemBox > .con {
    display: block;
    width: 100%;
  }

  .itemBox .photoBox {
    position: relative;
    width: 100%;
    height: 115px;
    overflow: hidden;
    font-size: 0;
  }

  .itemBox .photoBox:before {
    content:'';
    display: inline-block;
    width: 0;
    height: 115px;
    vertical-align: middle;
  }

  .itemBox .photoBox image {
    width: 100%;
    vertical-align: middle;
  }

  .itemBox .title {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 26px;
    line-height: 26px;
    text-align: left;
    font-size: 12px;
    color: #fff;
    padding-left: 5px;
    background: rgba(0, 0, 0, 0.5);
  }

  .itemBox .bCon {
    padding: 0 5px;
    height: 30px;
    line-height: 30px;
    overflow: hidden;
    background: #f0f4f5;
  }

  .itemBox .price {
    float: left;
  }

  .itemBox .price.tprice {
    float: right;
    text-decoration: line-through;
    color: #999;
  }

  .itemBox .price.tprice .yen {
    color: #999;
  }

  .itemBox .ui-recFlag {
    width: 14px;
    height: 14px;
    font-size: 12px;
    float: right;
    margin-left: 3px;
    transform: scale(0.95);
  }

  .itemBox .price {
    font-size: 16px;
    color: #f07845;
    padding-left: 1px;
  }

  .itemBox .price .yen {
    font-size: 12px;
    color: #f07845;
    margin-right: 2px;
  }

  .itemBox .price .qi {
    font-size: 14px;
    color: #8a8a8a;
    margin-left: 2px;
  }

  .emptyTip {
    clear: both;
    margin-top: 5px;
    height: 40px;
    line-height: 40px;
    text-align: center;
  }

  .noSearchResult {
    clear: both;
    margin-top: 5px;
    height: 200px;
    line-height: 200px;
    text-align: center;
    background: #fff;
  }

.loading-text {
  display: inline-block;
  vertical-align: middle;
}

.no-more,
.load-content {
  padding: 0 0 10px;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}

.search {
  position: relative;
  padding:10px 10px 0;
}
.search-icon {
  position: absolute;
  left: 10px;
  top: 20px;
}
.search-inp {
  display: block;
  margin: 0 70px 0 0;
  padding: 5px 20px 5px 20px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  font-size: 12px;
}
.search-clear {
  position: absolute;
  right: 85px;
  top: 20px;
}
.search-btn {
  position: absolute;
  right: 10px;
  top: 12px;
}
.nodata {
  color: #999;
  text-align: center;
}
