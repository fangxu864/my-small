  height: 428rpx ;
}
.banner-box .swiper-box .swiper-img{
  width: 100%;
  height: 100%;
}



.scroll-view-wrap {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}
.scroll-view {
  position: relative;
  height: 100%;
}
.plist {
  padding: 10px 10px 0;
  border-top:1px solid #e5e5e5;
}
.plist:after {
  content:'';
  display: table;
  height: 0;
  clear: both;
}
  .gtextoverflow {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .itemBox {
    float: left;
    width: 48.5%;
    margin-bottom: 10px;
    overflow: hidden;
    background: #fff;
  }

  .itemBox:nth-child(2n+1) {
    margin-right: 3%;
  }

  .itemBox > .con {
    display: block;
    width: 100%;
  }

  .itemBox .photoBox {
    position: relative;
    width: 100%;
    height: 115px;
    overflow: hidden;
    font-size: 0;
  }

  .itemBox .photoBox:before {
    content:'';
    display: inline-block;
    width: 0;
    height: 115px;
    vertical-align: middle;
  }

  .itemBox .photoBox image {
    width: 100%;
    vertical-align: middle;
  }

  .itemBox .title {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 26px;
    line-height: 26px;
    text-align: left;
    font-size: 12px;
    color: #fff;
    padding-left: 5px;
    background: rgba(0, 0, 0, 0.5);
  }

  .itemBox .bCon {
    padding: 0 5px;
    height: 30px;
    line-height: 30px;
    overflow: hidden;
    background: #f0eff5;
  }

  .itemBox .price {
    float: left;
  }
.itemBox .price .num{
    font-weight: bold;
}
.itemBox .price.tprice .num{
    font-weight: bold;
    font-size: 24rpx;
}

.itemBox .price.tprice {
    float: right;
    text-decoration: line-through;
    color: #999;
  }

  .itemBox .price.tprice .yen {
    color: #999;
  }

  .itemBox .ui-recFlag {
    width: 14px;
    height: 14px;
    font-size: 12px;
    float: right;
    margin-left: 3px;
    transform: scale(0.95);
  }

  .itemBox .price {
    font-size: 16px;
    color: #f07845;
    padding-left: 1px;
  }

  .itemBox .price .yen {
    font-size: 12px;
    color: #f07845;
    margin-right: 2px;
  }

  .itemBox .price .qi {
    font-size: 14px;
    color: #8a8a8a;
    margin-left: 2px;
  }

  .emptyTip {
    clear: both;
    margin-top: 5px;
    height: 40px;
    line-height: 40px;
    text-align: center;
  }

  .noSearchResult {
    clear: both;
    margin-top: 5px;
    height: 200px;
    line-height: 200px;
    text-align: center;
    background: #fff;
  }

.loading-text {
  display: inline-block;
  vertical-align: middle;
}

.no-more,
.load-content {
  padding: 0 0 10px;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}

.search {
